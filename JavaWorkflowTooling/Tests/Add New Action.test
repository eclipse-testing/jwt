------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Content-Type: text/ecl
Entry-Name: .content

get-editor "Overview (MyModel.workflow)" | get-tab-folder | get-tab-item SimpleProcess | click
with [get-editor "SimpleProcess (MyModel.workflow)"] {
    with [get-canvas] {
        mouse-press 7 12 button1
        mouse-release 7 12 button1 524288
    }
    with [get-palette] {
        get-palette-entry Select | mouse-move 117 18 -height 23 -width 125
        get-palette-entry Marquee | mouse-move 116 6 -height 23 -width 125
        get-palette-entry Action | mouse-move 107 9 -height 23 -width 125
        get-palette-entry "Initial Node" | mouse-move 100 17 -height 23 -width 125
        with [get-palette-entry Action] {
            mouse-move 47 12 button1 -height 23 -width 125
            mouse-press 47 12 button1 -height 23 -width 125
            mouse-release 47 12 button1 524288 -height 23 -width 125
        }
    }
    with [get-diagram] {
        mouse-move 129 156 button1 -height 556 -width 359
        mouse-press 129 156 button1 -height 556 -width 359
        mouse-release 129 156 button1 524288 -height 556 -width 359
    }
    get-diagram -index 1 | get-edit-part -name SimpleProcess | get-edit-part -className ActionEditPart 
        | mouse-hover 12 14 -height 29 -width 24
}
get-editor "SimpleProcess (MyModel.workflow)" | get-diagram -index 1 | get-edit-part -name SimpleProcess 
    | get-property childrenCount | equals 1 | verify-true
